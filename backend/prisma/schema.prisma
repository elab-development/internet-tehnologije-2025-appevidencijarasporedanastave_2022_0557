generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PROFESSOR
  STUDENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  NOT_SELECTED
}

enum ClassType {
  LECTURE
  PRACTICE
  LAB
}

model User {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String    @unique
  username      String    @unique
  password      String
  role          Role

  studentIndex  String?
  studyYear     Int?
  idGroup       Int?

  terms         Term[]
  attendances   Attendance[]

  createdAt     DateTime?  @default(now())
  updatedAt     DateTime?  @updatedAt
}

model Subject {
  id           Int       @id @default(autoincrement())
  name         String
  espb         Int
  terms        Term[]
}

model Term {
  id          Int       @id @default(autoincrement())
  subjectId   Int
  professorId Int
  date        DateTime
  startTime   DateTime
  endTime     DateTime
  classroom   String
  type        ClassType
  idGroup     Int

  subject     Subject   @relation(fields: [subjectId], references: [id])
  professor   User      @relation(fields: [professorId], references: [id])
  attendances Attendance[]
}

model Attendance {
  id          Int              @id @default(autoincrement())
  userId      Int
  termId      Int
  status      AttendanceStatus
  checkedInAt DateTime         @default(now())

  user        User             @relation(fields: [userId], references: [id])
  term        Term             @relation(fields: [termId], references: [id])

  @@unique([userId, termId])
}

model Group{
  id          Int              @id @default(autoincrement())
  name        String
}